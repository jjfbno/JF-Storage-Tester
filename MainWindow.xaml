<Window x:Class="JFStorageTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:JFStorageTester.ViewModels"
        xmlns:views="clr-namespace:JFStorageTester.Views"
        Title="JF Storage Tester"
        Height="580" Width="900"
        MinHeight="500" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Grid Width="26" Height="26" Margin="0,0,12,0" VerticalAlignment="Center">
                        <!-- Hard Drive Icon -->
                        <Path Data="M3,6 L21,6 C22,6 23,7 23,8 L23,16 C23,17 22,18 21,18 L3,18 C2,18 1,17 1,16 L1,8 C1,7 2,6 3,6 Z" 
                              Stroke="{DynamicResource PrimaryTextBrush}" 
                              StrokeThickness="1.5" 
                              Fill="Transparent"
                              Stretch="Uniform"/>
                        <!-- Disk Platter -->
                        <Ellipse Width="10" Height="10" 
                                 Stroke="{DynamicResource PrimaryTextBrush}" 
                                 StrokeThickness="1.2"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Margin="4,0,0,0"/>
                        <!-- Center Spindle -->
                        <Ellipse Width="3" Height="3" 
                                 Fill="{DynamicResource PrimaryTextBrush}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Margin="7.5,0,0,0"/>
                        <!-- Activity LED -->
                        <Ellipse Width="3" Height="3" 
                                 Fill="{DynamicResource AccentBrush}"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 Margin="0,0,3,0"/>
                    </Grid>
                    <TextBlock Text="JF Storage Tester" 
                               Style="{StaticResource HeaderTextStyle}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Drive Selector -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Drive:" 
                               Style="{StaticResource BodyTextStyle}"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <ComboBox ItemsSource="{Binding Drives}"
                              SelectedItem="{Binding SelectedDrive}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              IsEnabled="{Binding CanChangeDrive}"
                              MinWidth="350">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DriveLetter}" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <TextBlock Text=" - " 
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Text="{Binding VolumeName}" 
                                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <Border Background="{DynamicResource AccentBrush}"
                                            CornerRadius="3"
                                            Padding="6,2"
                                            Margin="10,0,0,0">
                                        <TextBlock Text="{Binding DriveTypeDisplay}" 
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="{Binding BitLockerDisplay}" 
                                               Margin="10,0,0,0"
                                               Foreground="{DynamicResource WarningBrush}"
                                               Visibility="{Binding IsBitLockerProtected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="⟳" 
                            Command="{Binding RefreshDrivesCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="Refresh drives"
                            FontSize="18"
                            Margin="8,0,0,0"/>
                </StackPanel>
                
                <!-- Settings Button -->
                <Button Grid.Column="2" 
                        Content="⚙"
                        Command="{Binding OpenSettingsCommand}"
                        Style="{StaticResource IconButtonStyle}"
                        ToolTip="Settings"
                        FontSize="20"/>
            </Grid>
        </Border>
        
        <!-- Drive Info Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource TertiaryBackgroundBrush}"
                Padding="12,8"
                Visibility="{Binding IsDriveSelected, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Drive Stats -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="CAPACITY" Style="{StaticResource LabelTextStyle}"/>
                        <TextBlock Text="{Binding SelectedDrive.TotalSizeDisplay}" 
                                   Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="USED" Style="{StaticResource LabelTextStyle}"/>
                        <TextBlock Text="{Binding SelectedDrive.UsedSpaceDisplay}" 
                                   Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="FREE" Style="{StaticResource LabelTextStyle}"/>
                        <TextBlock Text="{Binding SelectedDrive.FreeSpaceDisplay}" 
                                   Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="FILE SYSTEM" Style="{StaticResource LabelTextStyle}"/>
                        <TextBlock Text="{Binding SelectedDrive.FileSystem}" 
                                   Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="PARTITION" Style="{StaticResource LabelTextStyle}"/>
                        <TextBlock Text="{Binding SelectedDrive.PartitionSchemeDisplay}" 
                                   Style="{StaticResource ValueTextStyle}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Usage Bar -->
                <Grid Grid.Column="2" Width="200" VerticalAlignment="Center">
                    <ProgressBar x:Name="UsageBar"
                                 Value="{Binding SelectedDrive.UsedPercentage, Mode=OneWay}"
                                 Maximum="100"
                                 Height="8"
                                 Background="{DynamicResource BorderBrush}"
                                 Foreground="{DynamicResource AccentBrush}">
                        <ProgressBar.Template>
                            <ControlTemplate TargetType="ProgressBar">
                                <Grid>
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"/>
                                    <Border x:Name="PART_Indicator"
                                            Background="{TemplateBinding Foreground}"
                                            CornerRadius="4"
                                            HorizontalAlignment="Left"
                                            Width="{Binding RelativeSource={RelativeSource TemplatedParent}, 
                                                    Path=Value, 
                                                    Converter={StaticResource PercentToWidthConverter},
                                                    ConverterParameter=200}"/>
                                </Grid>
                            </ControlTemplate>
                        </ProgressBar.Template>
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedDrive.IsStorageCritical}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                </Grid>
            </Grid>
        </Border>
        
        <!-- Tab Navigation and Content -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Tab Buttons -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <RadioButton Content="Surface Test"
                                 Style="{StaticResource TabButtonStyle}"
                                 IsChecked="{Binding SelectedTabIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=0}"
                                 IsEnabled="{Binding CanChangeTab}"
                                 GroupName="MainTabs"/>
                    <RadioButton Content="Speed Test"
                                 Style="{StaticResource TabButtonStyle}"
                                 IsChecked="{Binding SelectedTabIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=1}"
                                 IsEnabled="{Binding CanChangeTab}"
                                 GroupName="MainTabs"/>
                </StackPanel>
            </Border>
            
            <!-- Tab Content -->
            <ContentControl Grid.Row="1">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content">
                            <Setter.Value>
                                <views:SurfaceTestView/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTabIndex}" Value="1">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:SpeedTestView/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Grid>
</Window>

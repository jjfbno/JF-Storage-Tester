<UserControl x:Class="JFStorageTester.Views.SurfaceTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:JFStorageTester.ViewModels"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <!-- Sector Grid Area - height matches stats panel -->
        <Border Grid.Column="0"
                Style="{StaticResource CardStyle}"
                Margin="0,0,12,0"
                VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="260"/>
                </Grid.RowDefinitions>

                <!-- Grid Header -->
                <TextBlock Grid.Row="0" 
                           Text="Sector Map"
                           Style="{StaticResource SubheaderTextStyle}"
                           Margin="0,0,0,8"/>

                <!-- Sector Grid -->
                <Border Grid.Row="1"
                        Background="{DynamicResource TertiaryBackgroundBrush}"
                        CornerRadius="4"
                        Padding="8">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SectorBlocks}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Top">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding GridColumns}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="10" Height="10"
                                            Margin="1"
                                            CornerRadius="1"
                                            Background="{Binding Color}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- Stats Panel -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <!-- Progress Card -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,6" Padding="10,6,10,6">
                    <StackPanel>
                        <TextBlock Text="PROGRESS"
                                   Style="{StaticResource LabelTextStyle}"
                                   Margin="0,0,0,2"/>

                        <Grid Margin="0,0,0,2">
                            <ProgressBar Value="{Binding ProgressPercent}"
                                         Maximum="100"
                                         Height="6"
                                         Background="{DynamicResource TertiaryBackgroundBrush}"
                                         Foreground="{DynamicResource AccentBrush}">
                                <ProgressBar.Template>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="3"/>
                                            <Border Background="{TemplateBinding Foreground}"
                                                    CornerRadius="3"
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                            Path=Value,
                                                            Converter={StaticResource PercentToWidthConverter},
                                                            ConverterParameter=198}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ProgressBar.Template>
                            </ProgressBar>
                        </Grid>

                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource ValueTextStyle}"
                                   FontSize="14">
                            <Run Text="{Binding ProgressPercent, StringFormat={}{0:F1}}"/><Run Text="%"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Statistics Card -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,6">
                    <StackPanel>
                        <TextBlock Text="STATISTICS"
                                   Style="{StaticResource LabelTextStyle}"
                                   Margin="0,0,0,6"/>

                        <!-- Average Speed -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Average Speed" Style="{StaticResource BodyTextStyle}"/>
                            <TextBlock Grid.Column="1" Style="{StaticResource ValueTextStyle}">
                                <Run Text="{Binding AverageSpeed, StringFormat={}{0:F1}}"/><Run Text=" MB/s" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </TextBlock>
                        </Grid>

                        <!-- Total Sectors -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Total Sectors" Style="{StaticResource BodyTextStyle}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding TotalSectors, StringFormat={}{0:N0}}"
                                       Style="{StaticResource ValueTextStyle}"/>
                        </Grid>

                        <!-- Good Sectors -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource SuccessBrush}" Margin="0,0,6,0"/>
                                <TextBlock Text="Good Sectors" Style="{StaticResource BodyTextStyle}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding GoodSectors, StringFormat={}{0:N0}}"
                                       Style="{StaticResource ValueTextStyle}"
                                       Foreground="{DynamicResource SuccessBrush}"/>
                        </Grid>

                        <!-- Bad Sectors -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="{DynamicResource ErrorBrush}" Margin="0,0,6,0"/>
                                <TextBlock Text="Bad Sectors" Style="{StaticResource BodyTextStyle}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding BadSectors, StringFormat={}{0:N0}}"
                                       Style="{StaticResource ValueTextStyle}"
                                       Foreground="{DynamicResource ErrorBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Time Card -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,6">
                    <StackPanel>
                        <TextBlock Text="TIME"
                                   Style="{StaticResource LabelTextStyle}"
                                   Margin="0,0,0,6"/>

                        <!-- Elapsed -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Elapsed" Style="{StaticResource BodyTextStyle}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding ElapsedTime}"
                                       Style="{StaticResource ValueTextStyle}"
                                       FontFamily="{StaticResource MonoFont}"/>
                        </Grid>

                        <!-- Remaining -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Remaining" Style="{StaticResource BodyTextStyle}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding RemainingTime}"
                                       Style="{StaticResource ValueTextStyle}"
                                       FontFamily="{StaticResource MonoFont}"/>
                        </Grid>
                    </StackPanel>
                </Border>

            <!-- Control Button -->
            <Button Content="{Binding ButtonText}"
                    Command="{Binding StartStopCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Height="36"
                    Margin="0,4,0,0"
                    FontSize="12"/>
        </StackPanel>

        <!-- Result Overlay -->
        <Border Grid.Column="0" Grid.ColumnSpan="2"
                Background="#E0000000"
                Visibility="{Binding ShowResultOverlay, Converter={StaticResource BoolToVisibilityConverter}}"
                MouseLeftButtonDown="ResultOverlay_Click">
            <Grid>
                <!-- PASS -->
                <TextBlock Text="PASS"
                           FontSize="120"
                           FontWeight="Bold"
                           Foreground="#4CAF50"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding TestPassed, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <!-- FAIL -->
                <TextBlock Text="FAIL"
                           FontSize="120"
                           FontWeight="Bold"
                           Foreground="#F44336"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TestPassed}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <!-- Click to dismiss hint -->
                <TextBlock Text="Click anywhere to dismiss"
                           FontSize="14"
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,30"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>



